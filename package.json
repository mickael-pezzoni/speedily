{
    "name": "speedily-js",
    "version": "0.0.6",
    "description": "speedily-js allows you to quickly create an express server with minimal code",
    "main": "lib/index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mickael-pezzoni/speedily-js"
    },
    "types": "lib/index.d.ts",
    "files": [
        "lib",
        "node_modules"
    ],
    "scripts": {
        "build": "rimraf lib && tsc",
        "start": "ts-node-dev --respawn -- src/index.ts",
        "lint": "eslint \"src/**/*.ts\" --fix",
        "doc": "typedoc src/index.ts",
        "prettier": "prettier --write ./src",
        "prepublish": "npm run build",
        "pre-commit": "lint-staged",
        "prepare": "husky install"
    },
    "keywords": [
        "express",
        "rest api",
        "api",
        "controller"
    ],
    "author": "Mickael Pezzoni",
    "license": "ISC",
    "dependencies": {
        "class-validator": "^0.13.2",
        "express": "^4.17.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^16.2.1",
        "@commitlint/config-conventional": "^16.2.1",
        "@types/express": "^4.17.13",
        "@types/node": "^17.0.16",
        "@typescript-eslint/eslint-plugin": "^5.11.0",
        "@typescript-eslint/parser": "^5.11.0",
        "eslint": "^8.8.0",
        "eslint-config-airbnb-typescript-lite": "^13.0.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.4.1",
        "prettier": "^2.5.1",
        "rimraf": "^3.0.2",
        "ts-node-dev": "^1.1.8",
        "typedoc": "^0.22.12",
        "typescript": "^4.5.5"
    },
    "lint-staged": {
        "src/**/*.{js,ts}": "eslint --fix",
        "**/*.{ts,tsx,js,jsx,vue,flow,gql,graphql,html,scss,css,less,json,yaml,yml,md}": "prettier --write"
    }
}
